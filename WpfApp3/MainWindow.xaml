<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Nom Binding" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="Nom" Width="120" />
        <Label Content="Entrez votre nom :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="204,194,0,0"/>
        <Label Content="{Binding Text, ElementName=textBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="261,274,0,0"/>
        <Label Content="Bonjour, " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="204,274,0,0"/>
    </Grid>
</Window>
